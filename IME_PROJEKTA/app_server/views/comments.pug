extends layout

block content
    .container
      section.comment-list
        // First Comment
        each comment in comments
          article.row
            .col-md-2.col-sm-2.hidden-xs
              figure.thumbnail
                img.img-responsive(src="http://www.tangoflooring.ca/wp-content/uploads/2015/07/user-avatar-placeholder.png")
                figcaption.text-center username
            .col-md-10.col-sm-10
              .panel.panel-default.arrow.left
                .panel-body
                  header.text-left
                    .comment-user
                      i.fa.fa-user
                      | #{comment.name}
                    time.comment-date(datetime="16-12-2014 01:05")
                      i.fa.fa-clock-o
                      |  #{comment.date}
                  .comment-post
                    p=comment.comment
    .container
      .widget-area.no-padding.blank
        .status-upload
          form
            .form-group
              label(for="username") Name:
              input.form-control(type="text" name="username")
            .form-group
              label(for="comment") Comment:
              textarea.form-control(rows="5" name="comment")
            .form-group
              label(for="picupload") Upload Image
              .input-group
                span.input-group-btn
                  span.btn.btn-default.btn-file
                    | Browseâ€¦ 
                    input#imgInp(type="file")
                input.form-control(type="text" name="picupload")
              div
                img#img-upload
            button.btn.btn-success.green(type="submit")
              i.fa.fa-share
              |  Share
        // Status Upload
      // Widget Area
    
    script(src="/javascripts/comments.js")
